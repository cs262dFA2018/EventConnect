<?xml version="1.0" encoding="utf-8"?>
<!--the contents for the DialogFragment expanded card view-->
<!--a parent view so that contents are scrollable-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/expanded_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_wide_horizontal_margin"
    android:paddingStart="@dimen/activity_wide_horizontal_margin"
    android:paddingRight="@dimen/activity_wide_horizontal_margin"
    android:paddingEnd="@dimen/activity_wide_horizontal_margin"
    android:paddingTop="@dimen/activity_tall_vertical_margin"
    android:paddingBottom="@dimen/activity_tall_vertical_margin"
    android:background="@drawable/expanded_card_background_light"
    >

    <!-- a container for the textviews in the expanded event view -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!-- back arrow -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="32dp"
            android:src="?attr/homeAsUpIndicator"
            android:background="?attr/selectableItemBackgroundBorderless"
            />

        <!-- host label -->
        <TextView
            android:id="@+id/host_label_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/host_label"
            android:textStyle="bold|normal"
            android:gravity="center"
            android:layout_gravity="center"
            />

        <!-- host name -->
        <TextView
            android:id="@+id/host_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:layout_gravity="center"
            />

        <!-- title label -->
        <TextView
            android:id="@+id/title_label_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_label"
            android:textStyle="bold|normal"
            android:gravity="center"
            android:layout_gravity="center"
            />

        <!-- title -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:layout_gravity="center"
            />

        <!-- category label -->
        <TextView
            android:id="@+id/cat_label_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:textStyle="bold|normal"
            android:gravity="center"
            android:layout_gravity="center"
            />

        <!-- category -->
        <TextView
            android:id="@+id/cat_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:layout_gravity="center"
            />


        <!-- description label -->
        <TextView
            android:id="@+id/description_label_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description_label"
            android:textStyle="bold|normal"
            android:gravity="center"
            android:layout_gravity="center"
            />

        <!-- description -->
        <TextView
            android:id="@+id/description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:layout_gravity="center"
            />

        <!-- date label -->
        <TextView
            android:id="@+id/date_label_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold|normal"
            android:gravity="center"
            android:layout_gravity="center"
            />

        <!-- date -->
        <TextView
            android:id="@+id/date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:layout_gravity="center"
            />

        <!-- Time label-->
        <TextView
            android:id="@+id/time_label_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold|normal"
            android:gravity="center"
            android:layout_gravity="center"
            />

        <!-- time -->
        <TextView
            android:id="@+id/time_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:layout_gravity="center"
            />

        <!-- location label  -->
        <TextView
            android:id="@+id/location_label_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold|normal"
            android:gravity="center"
            android:layout_gravity="center"
            />

        <!-- location -->
        <TextView
            android:id="@+id/location_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:layout_gravity="center"
            />

        <!-- cost label -->
        <TextView
            android:id="@+id/cost_label_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold|normal"
            android:gravity="center"
            android:layout_gravity="center"
            />

        <!-- cost -->
        <TextView
            android:id="@+id/cost_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:layout_gravity="center"
            />

    </LinearLayout>
</ScrollView>